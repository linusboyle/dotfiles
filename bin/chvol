#!/bin/bash

msg="Master Volume: "

if [ $1 == "raise" ];then
    amixer -q sset Master 5%+ unmute
    
    vol=$(amixer get Master | egrep -o "[0-9]+%")
    notify-send -t 2000 -i audio-on "$msg $vol"
elif [ $1 == "down" ];then
    amixer -q sset Master 5%- unmute

    vol=$(amixer get Master | egrep -o "[0-9]+%")
    notify-send -t 2000 -i audio-on "$msg $vol"
fi

