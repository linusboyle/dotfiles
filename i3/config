#系统切换模式
set $Locker i3lock --color "#000000" && sleep 1
set $mode_system System (l) lock, (e) logout, (s) suspend, (r) reboot, (p) poweroff
mode "$mode_system" {
	bindsym l exec --no-startup-id $Locker, mode "default"
	bindsym e exec --no-startup-id i3-msg exit, mode "default"
	bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
	bindsym r exec --no-startup-id systemctl reboot, mode "default"
	bindsym p exec --no-startup-id systemctl poweroff -i, mode "default"

	#back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+Delete mode "$mode_system"

#mpd 控制模式
set $mpc MPD Control (s) Stop (t) Toggle (n) Next (r) Previous

mode "$mpc" {
    bindsym s exec --no-startup-id mpc stop, mode "default"
    bindsym t exec --no-startup-id mpc toggle, mode "default"
    bindsym n exec --no-startup-id mpc next, mode "default"
    bindsym r exec --no-startup-id mpc previous, mode "default"

	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+o mode "$mpc"

#合成器
exec --no-startup-id xcompmgr -c -C -f -F -t-5 -l-5 -r4.2 -o.55 &

#换成deepin的通知服务
exec --no-startup-id /usr/lib/deepin-notifications/deepin-notifications &

#禁用主板鸣笛
exec --no-startup-id xset b off

#调整透明度

set $transparent (a) 100% (b) 75% (c) 50% (d) 25% (e) 0%

mode "$transparent" {
    bindsym a exec --no-startup-id transset 1 -a, mode "default"
    bindsym b exec --no-startup-id transset .75 -a, mode "default"
    bindsym c exec --no-startup-id transset .5 -a, mode "default"
    bindsym d exec --no-startup-id transset .25 -a, mode "default"
    bindsym e exec --no-startup-id transset 0 -a, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+q mode $transparent
