!Xft
Xft.antialias: 1
Xft.hinting: 1
Xft.hintstyle: hintfull
Xft.rgba: rgb
Xft.lcdfilter: lcddefault

!!!!!!!!urxvt!!!!!
!URxvt.font: xft:Source Code Pro SemiBold:size=11:antialias=true,xft:FontAwesome:pixelsize=11,xft:WenQuanYi Zen Hei Mono:size=11
URxvt.font: xft:Hack:size=13:antialias=true:style=Bold,xft:FontAwesome:size=13,xft:Noto Sans Mono CJK SC:size=13:style=Bold
URxvt.terminalName:rxvt-unicode-256color

URxvt.borderless: true
URxvt.urgentOnBell: false

urxvt*depth: 32
!urxvt*background: [90]#000000
!URxvt*fading: 20
URxvt.shading: 0

URxvt.scrollBar: false

! do not scroll with output
URxvt*scrollTtyOutput: false
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true
! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

URxvt.scrollstyle: plain

URxvt.saveLines:  8000
URxvt.visualBell: false

URxvt.inputMethod:fcitx

URxvt.inheritPixmap:true
URxvt.scrollBar_floating:False
URxvt.mouseWheelScrollPage:True
URxvt.cursorBlink:True

URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0
URxvt.letterSpace: -1

